{
  "manifest_version": 3,
  "name": "Steram Tab",
  "description": "Stream tab to defined locaiton",
  "version": "0.0.1",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "desktopCapture"
  ],
  "background": {
    "service_worker": "src/background.ts"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content-script.ts"]
    }
  ]
}